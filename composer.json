{
    "name": "icings/menu",
    "type": "cakephp-plugin",
    "description": "A KnpMenu seasoned menu plugin for CakePHP.",
    "keywords": ["cakephp", "menu", "knp-menu"],
    "license": "MIT",
    "authors": [
        {
            "name": "Oliver Nowak",
            "role": "Author",
            "homepage": "https://nowak-media.de"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.6.0",
        "cakephp/cakephp": "^3.7",
        "knplabs/knp-menu": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "cakephp/cakephp-codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Icings\\Menu\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Icings\\Menu\\Test\\": "tests"
        }
    },
    "scripts": {
        "check": [
            "@cs-check -- -p",
            "@test"
        ],
        "cs-check": "phpcs --parallel=16 ./src ./tests",
        "cs-fix": "phpcbf --parallel=16 -p ./src ./tests",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover=coverage.xml",
        "stan-setup": "cp composer.json composer.backup && composer require --dev \"phpstan/phpstan-shim:^0.11.0\" && mv composer.backup composer.json",
        "stan": [
            "@phpstan-src",
            "@phpstan-tests"
        ],
        "phpstan-src": "php ./vendor/phpstan/phpstan-shim/phpstan.phar analyse -l 7 -c ./phpstan.src.neon ./src",
        "phpstan-tests": "php ./vendor/phpstan/phpstan-shim/phpstan.phar analyse -l 7 -c ./phpstan.tests.neon ./tests"
    }
}
